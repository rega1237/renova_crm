<div class="p-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="font-poppins text-2xl font-bold text-rojo-carmesi">Detalle del Número</h1>
    <div class="space-x-2">
      <%= link_to "Editar", edit_settings_number_path(@number), class: "bg-amber-500 text-white font-semibold py-2 px-4 rounded hover:bg-amber-600" %>
      <%= link_to "Regresar", settings_numbers_path, class: "bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6 space-y-4">
    <div>
      <span class="text-sm text-gray-600">Número</span>
      <div class="font-montserrat text-lg"><%= @number.phone_number %></div>
    </div>
    <div>
      <span class="text-sm text-gray-600">Estado</span>
      <div class="font-montserrat text-lg"><%= @number.state %></div>
    </div>
    <div>
      <span class="text-sm text-gray-600">Asignado a</span>
      <div class="font-montserrat text-lg"><%= @number.user&.name || @number.user&.email %></div>
    </div>
    <div>
      <span class="text-sm text-gray-600">Status</span>
      <div class="font-montserrat text-lg"><%= @number.status %></div>
    </div>
  </div>
</div>
<%= render 'shared/call_ui_frame' %>