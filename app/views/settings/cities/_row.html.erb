<tr class="font-montserrat text-negro-onix hover:bg-gray-50 transition-colors">
  <td class="p-4 whitespace-nowrap"><%= city.name %></td>
  <td class="p-4 whitespace-nowrap">
    <% if city.abbreviation.present? %>
      <span class="inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
        <%= city.abbreviation %>
      </span>
    <% else %>
      <span class="text-sm text-gray-400">—</span>
    <% end %>
  </td>
  <td class="p-4 whitespace-nowrap">
    <span class="text-sm text-gray-700"><%= city.state.name %></span>
  </td>
  <td class="p-4 whitespace-nowrap">
    <div class="flex space-x-4">
      <%= link_to settings_city_path(city), class: "text-gray-500 hover:text-rojo-carmesi transition-colors", title: "Ver detalles" do %>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <%= link_to edit_settings_city_path(city), class: "text-gray-500 hover:text-rojo-carmesi transition-colors", title: "Editar" do %>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      <%= button_to settings_city_path(city),
          method: :delete,
          data: { turbo_confirm: '¿Estás seguro? Esta acción eliminará la ciudad.' },
          class: "text-gray-500 hover:text-red-600 transition-colors",
          title: "Eliminar" do %>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>