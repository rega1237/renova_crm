<div class="p-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi">
      Ciudades
    </h1>
    <%= link_to "Nueva Ciudad", new_settings_city_path, class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity" %>
  </div>

  <div class="bg-white rounded-xl shadow-md overflow-hidden"
       data-controller="infinite-scroll"
       data-infinite-scroll-url-value="<%= settings_cities_path %>"
       data-infinite-scroll-per-page-value="<%= @per_page %>">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Nombre</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Abreviación</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Estado</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200" data-infinite-scroll-target="list">
        <%= render partial: "settings/cities/row", collection: @cities, as: :city %>
      </tbody>
    </table>

    <div class="p-4 text-center">
      <div data-infinite-scroll-target="loadingIndicator" class="text-sm text-gray-500 hidden">Cargando más ciudades...</div>
      <div data-infinite-scroll-target="sentinel" class="h-6"></div>
    </div>

    <% if @cities.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay ciudades registradas</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza creando tu primera ciudad.</p>
        <div class="mt-6">
          <%= link_to "Nueva Ciudad", new_settings_city_path, class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-4 rounded-lg hover:opacity-90 transition-opacity" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/call_ui_frame' %>