<div class="p-8 max-w-4xl mx-auto">
  <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi mb-8">
    Detalles de la Ciudad
  </h1>
  <div class="bg-white p-8 rounded-xl shadow-md mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Nombre</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @city.name %></p>
      </div>
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Abreviación</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1">
          <% if @city.abbreviation.present? %>
            <span class="inline-flex px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
              <%= @city.abbreviation %>
            </span>
          <% else %>
            <span class="text-sm text-gray-400">—</span>
          <% end %>
        </p>
      </div>
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Estado</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @city.state.display_name_with_abbreviation %></p>
      </div>
    </div>
    <hr class="my-8">
    <div class="flex items-center justify-end space-x-6">
      <%= link_to "Volver a la lista", settings_cities_path, class: "font-poppins text-negro-onix hover:underline" %>
      <%= link_to "Editar Ciudad", edit_settings_city_path(@city), class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity" %>
    </div>
  </div>
</div>