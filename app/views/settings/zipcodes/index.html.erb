<div class="p-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi">
      Códigos Postales
    </h1>
    <%= link_to "Nuevo Código Postal", new_settings_zipcode_path, class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity" %>
  </div>

  <!-- Filtros -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-6" data-controller="zipcodes-filter" data-zipcodes-filter-url-value="/api/cities">
    <%= form_with url: settings_zipcodes_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
      <div>
        <%= form.label :query, "Buscar código", class: "block font-poppins text-sm font-medium text-negro-onix mb-1" %>
        <%= form.text_field :query, value: params[:query], placeholder: "Ej: 64000, 01000", class: "w-full border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:border-rojo-carmesi focus:ring focus:ring-rojo-carmesi focus:ring-opacity-50 font-montserrat text-sm" %>
      </div>
      
      <div>
        <%= form.label :state_id, "Estado", class: "block font-poppins text-sm font-medium text-negro-onix mb-1" %>
        <%= form.collection_select :state_id, @states, :id, :name, { prompt: "Todos los estados", selected: params[:state_id] }, class: "w-full border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:border-rojo-carmesi focus:ring focus:ring-rojo-carmesi focus:ring-opacity-50 font-montserrat text-sm", data: { zipcodes_filter_target: "stateSelect", action: "change->zipcodes-filter#changeState" } %>
      </div>
      
      <div>
        <%= form.label :city_id, "Ciudad", class: "block font-poppins text-sm font-medium text-negro-onix mb-1" %>
        <%= form.collection_select :city_id, @cities, :id, :name, { prompt: "Todas las ciudades", selected: params[:city_id] }, class: "w-full border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:border-rojo-carmesi focus:ring focus:ring-rojo-carmesi focus:ring-opacity-50 font-montserrat text-sm", data: { zipcodes_filter_target: "citySelect" } %>
        <span class="hidden text-xs text-gray-500" data-zipcodes-filter-target="loadingIndicator">Cargando ciudades...</span>
      </div>
      
      <div class="flex items-end space-x-2">
        <%= form.submit "Filtrar", class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-4 rounded-lg hover:opacity-90 transition-opacity text-sm" %>
        <%= link_to "Limpiar", settings_zipcodes_path, class: "bg-gray-500 text-white font-poppins font-semibold py-2 px-4 rounded-lg hover:opacity-90 transition-opacity text-sm" %>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-md overflow-hidden"
       data-controller="infinite-scroll"
       data-infinite-scroll-url-value="<%= settings_zipcodes_path(params.permit(:query, :state_id, :city_id).to_h) %>"
       data-infinite-scroll-per-page-value="<%= @per_page %>">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Código Postal</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Ciudad</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Estado</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200" data-infinite-scroll-target="list">
        <%= render partial: "settings/zipcodes/row", collection: @zipcodes, as: :zipcode %>
      </tbody>
    </table>

    <div class="p-4 text-center">
      <div data-infinite-scroll-target="loadingIndicator" class="text-sm text-gray-500 hidden">Cargando más códigos postales...</div>
      <div data-infinite-scroll-target="sentinel" class="h-6"></div>
    </div>

    <% if @zipcodes.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay códigos postales registrados</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza creando tu primer código postal.</p>
        <div class="mt-6">
          <%= link_to "Nuevo Código Postal", new_settings_zipcode_path, class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-4 rounded-lg hover:opacity-90 transition-opacity" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/call_ui_frame' %>