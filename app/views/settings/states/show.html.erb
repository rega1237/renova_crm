<div class="p-8 max-w-4xl mx-auto">
  <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi mb-8">
    Detalles del Estado
  </h1>
  <div class="bg-white p-8 rounded-xl shadow-md mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Nombre</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @state.name %></p>
      </div>
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Abreviación</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1">
          <span class="inline-flex px-3 py-1 text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
            <%= @state.abbreviation %>
          </span>
        </p>
      </div>
    </div>
    <hr class="my-8">
    <div class="flex items-center justify-end space-x-6">
      <%= link_to "Volver a la lista", settings_states_path, class: "font-poppins text-negro-onix hover:underline" %>
      <%= link_to "Editar Estado", edit_settings_state_path(@state), class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity" %>
    </div>
  </div>
  <!-- Sección de clientes asociados -->
  <div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="font-poppins text-lg font-semibold text-negro-onix">
        Clientes en <%= @state.name %> (<%= @state.clients.count %>)
      </h3>
    </div>
    <% if @state.clients.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Nombre</th>
              <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Teléfono</th>
              <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Email</th>
              <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Estado</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @state.clients.includes(:seller).each do |client| %>
              <tr class="font-montserrat text-negro-onix hover:bg-gray-50 transition-colors">
                <td class="p-4 whitespace-nowrap">
                  <%= link_to client.name, client_path(client), class: "text-rojo-carmesi hover:underline" %>
                </td>
                <td class="p-4 whitespace-nowrap text-sm text-gray-500">
                  <%= client.phone.present? ? client.phone : "No especificado" %>
                </td>
                <td class="p-4 whitespace-nowrap text-sm text-gray-500">
                  <%= client.email.present? ? client.email : "No especificado" %>
                </td>
                <td class="p-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full <%= status_badge_classes(client.status) %>">
                    <%= status_display_name(client.status) %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay clientes en este estado</h3>
        <p class="mt-1 text-sm text-gray-500">Los clientes asignados a este estado aparecerán aquí.</p>
      </div>
    <% end %>
  </div>
</div>