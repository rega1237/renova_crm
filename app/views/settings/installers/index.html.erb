<div class="p-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi">
      Instaladores
    </h1>
    <%= link_to "Nuevo Instalador", new_settings_installer_path, class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg" %>
  </div>
  <div class="bg-white rounded-xl shadow-md overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Nombre</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Email</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Teléfono</th>
          <th class="p-4 text-left font-poppins text-sm font-semibold text-negro-onix uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @installers.each do |installer| %>
          <tr class="font-montserrat text-negro-onix">
            <td class="p-4 whitespace-nowrap"><%= installer.name %></td>
            <td class="p-4 whitespace-nowrap"><%= installer.email %></td>
            <td class="p-4 whitespace-nowrap"><%= installer.phone %></td>
            <td class="p-4 whitespace-nowrap">
              <div class="flex space-x-4">
                <%= link_to settings_installer_path(installer), class: "text-gray-500 hover:text-rojo-carmesi transition-colors" do %>
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                <% end %>
                <%= link_to edit_settings_installer_path(installer), class: "text-gray-500 hover:text-rojo-carmesi transition-colors" do %>
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                <% end %>
                <%= button_to settings_installer_path(installer), method: :delete, data: { turbo_confirm: '¿Estás seguro?' }, class: "text-gray-500 hover:text-rojo-carmesi transition-colors" do %>
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>