<div class="p-8 max-w-2xl mx-auto">
  <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi mb-8">
    Detalles del Usuario
  </h1>

  <div class="bg-white p-8 rounded-xl shadow-md">
    <div class="space-y-6">
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Nombre</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @user.name %></p>
      </div>
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Email</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @user.email %></p>
      </div>
      <div>
        <h2 class="font-poppins text-sm font-semibold text-gray-500 uppercase tracking-wider">Rol</h2>
        <p class="font-montserrat text-lg text-negro-onix mt-1"><%= @user.rol.humanize %></p>
      </div>
    </div>

    <hr class="my-8">

    <div class="flex items-center justify-end space-x-6">
      <%= link_to "Volver a la lista", admin_users_path, class: "font-poppins text-negro-onix hover:underline" %>
      <%= link_to "Editar Usuario", edit_admin_user_path(@user), class: "bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity" %>
    </div>
  </div>
</div>