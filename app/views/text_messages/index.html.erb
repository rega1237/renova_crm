<div class="bg-white p-6 rounded-xl shadow-md">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <h1 class="font-poppins text-3xl font-bold text-rojo-carmesi mb-4 sm:mb-0">
      Mensajes de Texto
    </h1>

    <div class="flex flex-col sm:flex-row gap-3">
      <!-- Puedes agregar un botón para enviar SMS aquí cuando esté disponible -->
    </div>
  </div>

  <!-- KPIs -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
      <div class="text-xs font-poppins uppercase tracking-wide text-gray-500">Total SMS</div>
      <div class="mt-2 text-2xl font-poppins font-bold text-negro-onix"><%= @total_count %></div>
    </div>
    <div class="bg-green-50 rounded-lg p-4 border border-green-200">
      <div class="text-xs font-poppins uppercase tracking-wide text-green-700">Entrantes</div>
      <div class="mt-2 text-2xl font-poppins font-bold text-green-700"><%= @total_inbound %></div>
    </div>
    <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
      <div class="text-xs font-poppins uppercase tracking-wide text-blue-700">Salientes</div>
      <div class="mt-2 text-2xl font-poppins font-bold text-blue-700"><%= @total_outbound %></div>
    </div>
  </div>

  <!-- Filtros -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
    <%= form_with url: text_messages_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-3" do |form| %>
      <div class="flex flex-col">
        <%= form.label :direction, "Dirección", class: "text-sm font-poppins font-medium text-gray-700 mb-1" %>
        <%= select_tag :direction, 
            options_for_select([['Todas', nil], ['Entrante', 'inbound'], ['Saliente', 'outbound']], params[:direction]),
            class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm" %>
      </div>
      
      <div class="flex flex-col">
        <%= form.label :source, "Origen", class: "text-sm font-poppins font-medium text-gray-700 mb-1" %>
        <%= select_tag :source,
            options_for_select([['Todos', nil], ['Cliente', 'client'], ['Contacto', 'contact'], ['Desconocido', 'unknown']], params[:source]),
            class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm" %>
      </div>

      <div class="flex flex-col">
        <%= form.label :start_date, "Fecha Inicio", class: "text-sm font-poppins font-medium text-gray-700 mb-1" %>
        <%= date_field_tag :start_date, params[:start_date], class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm" %>
      </div>

      <div class="flex flex-col">
        <%= form.label :end_date, "Fecha Fin", class: "text-sm font-poppins font-medium text-gray-700 mb-1" %>
        <%= date_field_tag :end_date, params[:end_date], class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm" %>
      </div>

      <div class="flex items-end gap-2">
        <%= form.submit "Filtrar", class: "bg-rojo-carmesi text-white font-poppins font-medium py-2 px-4 rounded-md hover:opacity-90 transition-opacity text-sm" %>
        <%= link_to "Limpiar", text_messages_path, class: "bg-gray-500 text-white font-poppins font-medium py-2 px-4 rounded-md hover:opacity-90 transition-opacity text-sm" %>
      </div>
    <% end %>
  </div>

  <% if @text_messages.any? %>
    <!-- Tabla de SMS -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">De</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Para</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dirección</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mensaje</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @text_messages.each do |sms| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 font-montserrat text-sm text-negro-onix">
                <%= sms.sms_date.strftime('%d/%m/%Y') %><br>
                <span class="text-gray-500"><%= sms.sms_time.strftime('%H:%M') %></span>
              </td>
              <td class="px-4 py-3 font-montserrat text-sm text-gray-700">
                <% if sms.client_id.present? && sms.direction == 'inbound' %>
                   <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-700 font-poppins">Cliente</span>
                  <%= link_to(sms.client.name,
                              client_path(sms.client),
                              data: { turbo_frame: "slideover" },
                              class: "text-rojo-carmesi hover:underline") %>
                </span>
                <% elsif sms.contact_list_id.present? && sms.direction == 'inbound' %>
                                    <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded bg-purple-100 text-purple-700 font-poppins">Contacto</span>
                  <%= link_to(sms.contact_list.name,
                              contact_list_path(sms.contact_list),
                              class: "text-rojo-carmesi hover:underline") %>
                </span>
                <% elsif sms.from_phone.present? && sms.direction == 'inbound' %>
                  <span class="inline-flex items-center gap-2">
                    <span class="px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 font-poppins">Teléfono</span>
                    <span class="text-negro-onix font-montserrat"><%= sms.from_phone %></span>
                  </span>
                <% elsif sms.user_id.present? && sms.direction == 'outbound' %>
                  <span class="inline-flex items-center gap-2">
                    <span class="px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 font-poppins">Usuario</span>
                    <span class="text-negro-onix font-montserrat"><%= sms.user.name %></span>
                  </span>
                <% else %>
                  -  
                <% end %>
              </td>
              <td class="px-4 py-3 font-montserrat text-sm text-gray-700">
                                  <% if sms.client_id.present? && sms.direction == 'outbound' %>
                   <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-700 font-poppins">Cliente</span>
                  <%= link_to(sms.client.name,
                              client_path(sms.client),
                              data: { turbo_frame: "slideover" },
                              class: "text-rojo-carmesi hover:underline") %>
                </span>
                <% elsif sms.contact_list_id.present? && sms.direction == 'outbound' %>
                                    <span class="inline-flex items-center gap-2">
                  <span class="px-2 py-1 text-xs rounded bg-purple-100 text-purple-700 font-poppins">Contacto</span>
                  <%= link_to(sms.contact_list.name,
                              contact_list_path(sms.contact_list),
                              class: "text-rojo-carmesi hover:underline") %>
                </span>
                <% elsif sms.from_phone.present? && sms.direction == 'outbound' %>
                  <span class="inline-flex items-center gap-2">
                    <span class="px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 font-poppins">Teléfono</span>
                    <span class="text-negro-onix font-montserrat"><%= sms.from_phone %></span>
                  </span>
                <% elsif sms.user_id.present? && sms.direction == 'inbound' %>
                  <span class="inline-flex items-center gap-2">
                    <span class="px-2 py-1 text-xs rounded bg-gray-100 text-gray-700 font-poppins">Usuario</span>
                    <span class="text-negro-onix font-montserrat"><%= sms.user.name %></span>
                  </span>
                <% else %>
                  -  
                <% end %>
              </td>
              <td class="px-4 py-3 font-montserrat text-sm text-gray-700">
                <% if sms.direction == 'inbound' %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Entrante</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">Saliente</span>
                <% end %>
              </td>
              <td class="px-4 py-3 font-montserrat text-sm text-gray-700 max-w-xs truncate">
                <%= sms.message_body.truncate(50) %>
              </td>
              <td class="px-4 py-3 text-right">
                <%= link_to "Ver", text_message_path(sms), class: "text-rojo-carmesi font-poppins text-sm hover:underline mr-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <h3 class="mt-2 text-sm font-poppins font-medium text-gray-900">No hay mensajes SMS</h3>
      <p class="mt-1 text-sm font-montserrat text-gray-500">
        <% if params[:direction].present? || params[:source].present? || params[:start_date].present? || params[:end_date].present? %>
          No se encontraron mensajes SMS para los filtros seleccionados.
        <% else %>
          Aún no hay mensajes SMS registrados.
        <% end %>
      </p>
    </div>
  <% end %>

  <!-- Paginación -->
  <% if @text_messages.any? %>
    <div class="flex items-center justify-between mt-4">
      <div class="font-montserrat text-sm text-gray-600">
        Página <%= @page %> de <%= @total_pages %> — <%= @total_count %> mensajes
      </div>
      <div class="flex gap-2">
        <% prev_page = @page - 1 %>
        <% next_page = @page + 1 %>
        <%= link_to "Anterior", text_messages_path(request.query_parameters.merge(page: prev_page)), class: "px-3 py-2 border border-gray-300 rounded-md font-poppins text-sm #{prev_page < 1 ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'}", disabled: prev_page < 1 %>
        <%= link_to "Siguiente", text_messages_path(request.query_parameters.merge(page: next_page)), class: "px-3 py-2 border border-gray-300 rounded-md font-poppins text-sm #{@page >= @total_pages ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'}", disabled: @page >= @total_pages %>
      </div>
    </div>
  <% end %>
    <!-- Frame para renderizar el slideover del cliente vía Turbo -->
  <%= turbo_frame_tag "slideover" %>
</div>