<div>
  <div class="flex items-center justify-between">
    <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Vendedor asignado</h3>
    <button type="button" 
            data-action="click->client-inline-edit#toggleEdit"
            data-field="assigned_seller_id"
            class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
      <%= client.assigned_seller.present? ? 'Cambiar' : 'Asignar' %>
    </button>
  </div>
  <div id="client_assigned_seller_id_display" data-client-inline-edit-target="display" data-field="assigned_seller_id">
    <p class="font-montserrat text-lg text-negro-onix mt-1">
      <% if client.assigned_seller.present? %>
        <%= client.assigned_seller.name %>
      <% else %>
        <span class="text-gray-400 italic">No asignado</span>
      <% end %>
    </p>
  </div>
  <div data-client-inline-edit-target="editForm" data-field="assigned_seller_id" class="hidden mt-1">
    <%= render 'field_edit_form', client: client, field: 'assigned_seller_id' %>
  </div>
</div>