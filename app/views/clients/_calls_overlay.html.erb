<div class="h-full flex flex-col">
  <!-- Header del overlay -->
  <div class="p-4 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-poppins font-semibold text-gray-900">
        Historial de Llamadas
      </h3>
      <button type="button"
              data-action="click->calls-overlay#hide"
              class="p-2 rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Contenido del overlay -->
  <div class="flex-1 overflow-y-auto">
    <% if calls.any? %>
      <div class="divide-y divide-gray-200">
        <% calls.each do |call| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= call_status_color(call.status) %>">
                    <%= call.status.humanize %>
                  </span>
                  <% if call.direction.present? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= call.direction == 'inbound' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                      <%= call.direction == 'inbound' ? '↙ Entrante' : '↗ Saliente' %>
                    </span>
                  <% end %>
                  <span class="text-sm text-gray-500">
                    <%= call.call_date.strftime('%d/%m/%Y') %> <%= call.call_time.strftime('%H:%M') %>
                  </span>
                  <% if call.duration.present? %>
                    <span class="text-sm text-gray-500">
                      <%= call.duration %>s
                    </span>
                  <% end %>
                </div>
                
                <% if call.contact_list_id.present? && call.contact_list %>
                  <p class="mt-1 text-sm text-gray-600">
                    Contacto: <%= call.contact_list.name %>
                  </p>
                <% end %>
                
                <% if call.recording_sid.present? %>
                  <p class="mt-1 text-sm text-gray-700">
                    Grabación: <%= call.recording_duration %> segundos
                  </p>
                <% end %>
                
                <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                  <span>Usuario: <%= call.user&.name || 'Sistema' %></span>
                  <% if call.answered == true %>
                    <span class="text-green-600">✓ Contestada</span>
                  <% elsif call.answered == false %>
                    <span class="text-red-600">✗ No contestada</span>
                  <% end %>
                </div>
              </div>
              
              <button type="button"
                      data-action="click->calls-overlay#loadCallDetails"
                      data-client-id="<%= client.id %>"
                      data-call-id="<%= call.id %>"
                      class="ml-4 p-2 text-gray-400 hover:text-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-300">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay llamadas</h3>
        <p class="mt-1 text-sm text-gray-500">Este cliente aún no tiene llamadas registradas.</p>
      </div>
    <% end %>
  </div>
</div>