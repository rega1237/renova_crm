<div class="h-full flex flex-col">
  <!-- Header del overlay -->
  <div class="p-4 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <button type="button"
                data-action="click->sms-overlay#showSmsList"
                data-client-id="<%= client.id %>"
                class="p-2 rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <h3 class="text-lg font-poppins font-semibold text-gray-900">
          Detalles del Mensaje SMS
        </h3>
      </div>
      <button type="button"
              data-action="click->sms-overlay#hide"
              class="p-2 rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Contenido del overlay -->
  <div class="flex-1 overflow-y-auto max-h-[calc(100vh-8rem)]">
    <div class="p-6 space-y-6">
      <!-- Información básica -->
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center space-x-2 mb-3">
          <% if sms.direction == 'inbound' %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              ↙ Entrante
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              ↗ Saliente
            </span>
          <% end %>
          <span class="text-sm text-gray-500">
            <%= sms.sms_date.strftime('%d/%m/%Y') %> <%= sms.sms_time.strftime('%H:%M') %>
          </span>
          <span class="text-xs text-gray-400">
            <%= sms.status&.humanize || 'Desconocido' %>
          </span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">De</h4>
            <p class="font-montserrat text-lg text-negro-onix mt-1">
              <%= sms.from_phone || 'Desconocido' %>
            </p>
          </div>
          <div>
            <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Para</h4>
            <p class="font-montserrat text-lg text-negro-onix mt-1">
              <%= sms.to_phone || 'Desconocido' %>
            </p>
          </div>
        </div>
      </div>

      <!-- Mensaje -->
      <div>
        <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase mb-2">Mensaje</h4>
        <div class="bg-white border border-gray-200 rounded-lg p-4">
          <p class="font-montserrat text-gray-700 whitespace-pre-wrap">
            <%= sms.message_body %>
          </p>
        </div>
      </div>

      <!-- Información adicional -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Usuario</h4>
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <%= sms.user&.name || sms.user&.email || 'Sistema' %>
          </p>
        </div>
        <div>
          <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Tipo de Contacto</h4>
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <% if sms.client_id.present? %>
              <span class="inline-flex items-center px-2 py-1 text-xs rounded bg-blue-100 text-blue-700">Cliente</span>
            <% elsif sms.contact_list_id.present? %>
              <span class="inline-flex items-center px-2 py-1 text-xs rounded bg-purple-100 text-purple-700">Contacto</span>
            <% else %>
              <span class="text-gray-400 italic">No especificado</span>
            <% end %>
          </p>
        </div>
      </div>

      <!-- Fechas -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Fecha de Creación</h4>
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <%= sms.created_at.strftime('%d/%m/%Y %H:%M') %>
          </p>
        </div>
        <div>
          <h4 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Última Actualización</h4>
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <%= sms.updated_at.strftime('%d/%m/%Y %H:%M') %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>