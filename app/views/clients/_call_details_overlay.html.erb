<div class="h-full flex flex-col">
  <!-- Header del overlay -->
  <div class="p-4 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <button type="button"
                data-action="click->calls-overlay#showCallsList"
                data-client-id="<%= client.id %>"
                class="p-2 rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <h3 class="text-lg font-poppins font-semibold text-gray-900">
          Detalles de la Llamada
        </h3>
      </div>
      <button type="button"
              data-action="click->calls-overlay#hide"
              class="p-2 rounded-md text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Contenido de detalles -->
  <div class="flex-1 overflow-y-auto p-6">
    <div class="space-y-6">
      <!-- Información básica -->
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Información de la Llamada</h4>
        <dl class="space-y-2">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Estado:</dt>
            <dd class="text-sm font-medium">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= call_status_color(call.status) %>">
                <%= call.status.humanize %>
              </span>
            </dd>
          </div>
          <% if call.direction.present? %>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Dirección:</dt>
              <dd class="text-sm font-medium">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= call.direction == 'inbound' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                  <%= call.direction == 'inbound' ? '↙ Entrante' : '↗ Saliente' %>
                </span>
              </dd>
            </div>
          <% end %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Fecha:</dt>
            <dd class="text-sm text-gray-900"><%= call.call_date.strftime('%d/%m/%Y') %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Hora:</dt>
            <dd class="text-sm text-gray-900"><%= call.call_time.strftime('%H:%M') %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500">Duración:</dt>
            <dd class="text-sm text-gray-900"><%= call.duration || 'No registrada' %></dd>
          </div>
        </dl>
      </div>

      <!-- Usuario que realizó la llamada -->
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Usuario</h4>
        <p class="text-sm text-gray-700">
          <%= call.user&.name || 'Sistema' %>
        </p>
      </div>

      <!-- Contacto (si existe) -->
      <% if call.contact_list_id.present? && call.contact_list %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Contacto</h4>
          <p class="text-sm text-gray-700">
            <%= call.contact_list.name %>
            <% if call.contact_list.phone.present? %>
              <br><span class="text-gray-500"><%= call.contact_list.phone %></span>
            <% end %>
          </p>
        </div>
      <% end %>

      <!-- Notas -->
      <% if call.recording_sid.present? %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Información de Grabación</h4>
          <p class="text-sm text-gray-700">ID de grabación: <%= call.recording_sid %></p>
          <% if call.recording_duration.present? %>
            <p class="text-sm text-gray-700 mt-1">Duración: <%= call.recording_duration %> segundos</p>
          <% end %>
          <% if call.recording_status.present? %>
            <p class="text-sm text-gray-700 mt-1">Estado: <%= call.recording_status.humanize %></p>
          <% end %>
        </div>
      <% end %>

      <!-- Información adicional de la llamada -->
      <% if call.answered.present? %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Estado de Respuesta</h4>
          <p class="text-sm text-gray-700">
            <% if call.answered == true %>
              <span class="text-green-600 font-medium">✓ Contestada</span>
            <% else %>
              <span class="text-red-600 font-medium">✗ No contestada</span>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>