<div class="fixed inset-0 overflow-hidden z-50" 
     role="dialog" 
     data-controller="slideover"
     data-slideover-target="overlay"
     data-action="click->slideover#clickOutside">
  <div class="fixed inset-y-0 right-0 w-full max-w-md bg-white shadow-xl flex flex-col"
       data-slideover-target="panel"
       data-action="click->slideover#preventClose"
       data-controller="toggle">
    <div class="p-6 bg-rojo-carmesi">
      <div class="flex items-start justify-between">
        <h2 class="text-lg font-poppins font-medium text-white">
          Detalles del Cliente
        </h2>
        <!-- Iconos de acción y botón cerrar -->
        <div class="ml-3 flex items-center space-x-3">
          <!-- Icono de teléfono  -->
          <button class="p-2 rounded-md bg-green-500 hover:bg-green-600 transition-colors focus:outline-none focus:ring-2 focus:ring-green-300" 
              title="Llamar cliente">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </button>

          <!-- Botón Agendar Cita -->
          <button type="button" data-action="click->toggle#toggle" class="p-2 rounded-md bg-purple-500 hover:bg-purple-600 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-300" title="Agendar Cita">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </button>

          <!-- Icono de libreta/editar  -->
          <%= link_to edit_client_path(client), 
          class: "p-2 rounded-md bg-blue-500 hover:bg-blue-600 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-300",
          title: "Editar cliente" do %>
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          <% end %>
          <!-- Icono de lista telefónica  -->
          <a href="#" class="p-2 rounded-md bg-yellow-500 hover:bg-yellow-600 transition-colors focus:outline-none focus:ring-2 focus:ring-yellow-300" 
         title="Directorio telefónico">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.168 18.477 18.582 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </a>
          <!-- Botón cerrar -->
          <button data-action="click->slideover#close" 
            class="p-2 bg-rojo-carmesi rounded-md text-white hover:text-gray-200 focus:outline-none focus:ring-2 focus:ring-white transition-colors"
            title="Cerrar panel">
            <span class="sr-only">Close panel</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div class="relative flex-1 p-6 space-y-6 overflow-y-auto" data-controller="client-inline-edit">
      <!-- Nombre -->
      <div>
        <div class="flex items-center justify-between">
          <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Nombre</h3>
          <button type="button" 
                  data-action="click->client-inline-edit#toggleEdit"
                  data-field="name"
                  class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
            Editar
          </button>
        </div>
        <div id="client_name_display" data-client-inline-edit-target="display" data-field="name">
          <p class="font-montserrat text-lg text-negro-onix mt-1"><%= client.name %></p>
        </div>
        <div data-client-inline-edit-target="editForm" data-field="name" class="hidden mt-1">
          <%= render 'field_edit_form', client: client, field: 'name' %>
        </div>
      </div>
      
      <!-- Teléfono -->
      <div>
        <div class="flex items-center justify-between">
          <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Teléfono</h3>
          <button type="button" 
                  data-action="click->client-inline-edit#toggleEdit"
                  data-field="phone"
                  class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
            Editar
          </button>
        </div>
        <div id="client_phone_display" data-client-inline-edit-target="display" data-field="phone">
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <% if client.phone.present? %>
              <%= client.phone %>
            <% else %>
              <span class="text-gray-400 italic">No especificado</span>
            <% end %>
          </p>
        </div>
        <div data-client-inline-edit-target="editForm" data-field="phone" class="hidden mt-1">
          <%= render 'field_edit_form', client: client, field: 'phone' %>
        </div>
      </div>
      
      <!-- Email -->
      <div>
        <div class="flex items-center justify-between">
          <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Email</h3>
          <button type="button" 
                  data-action="click->client-inline-edit#toggleEdit"
                  data-field="email"
                  class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
            Editar
          </button>
        </div>
        <div id="client_email_display" data-client-inline-edit-target="display" data-field="email">
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <% if client.email.present? %>
              <%= client.email %>
            <% else %>
              <span class="text-gray-400 italic">No especificado</span>
            <% end %>
          </p>
        </div>
        <div data-client-inline-edit-target="editForm" data-field="email" class="hidden mt-1">
          <%= render 'field_edit_form', client: client, field: 'email' %>
        </div>
      </div>
      
      <!-- Dirección -->
      <div>
        <div class="flex items-center justify-between">
          <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Dirección</h3>
          <button type="button" 
                  data-action="click->client-inline-edit#toggleEdit"
                  data-field="address"
                  class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
            Editar
          </button>
        </div>
        <div id="client_address_display" data-client-inline-edit-target="display" data-field="address">
          <p class="font-montserrat text-lg text-negro-onix mt-1">
            <% if client.address.present? %>
              <%= client.address %>
            <% else %>
              <span class="text-gray-400 italic">No especificada</span>
            <% end %>
          </p>
        </div>
        <div data-client-inline-edit-target="editForm" data-field="address" class="hidden mt-1">
          <%= render 'field_edit_form', client: client, field: 'address' %>
        </div>
      </div>
      
      <!-- Código Postal y Estado -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Código Postal -->
        <div>
          <div class="flex items-center justify-between">
            <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Código Postal</h3>
            <button type="button" 
                    data-action="click->client-inline-edit#toggleEdit"
                    data-field="zip_code"
                    class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
              Editar
            </button>
          </div>
          <div id="client_zip_code_display" data-client-inline-edit-target="display" data-field="zip_code">
            <p class="font-montserrat text-lg text-negro-onix mt-1">
              <% if client.zip_code.present? %>
                <%= client.zip_code %>
              <% else %>
                <span class="text-gray-400 italic">No especificado</span>
              <% end %>
            </p>
          </div>
          <div data-client-inline-edit-target="editForm" data-field="zip_code" class="hidden mt-1">
            <%= render 'field_edit_form', client: client, field: 'zip_code' %>
          </div>
        </div>
        
        <!-- Estado -->
        <div>
          <div class="flex items-center justify-between">
            <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Estado</h3>
            <button type="button" 
                    data-action="click->client-inline-edit#toggleEdit"
                    data-field="state_id"
                    class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
              Editar
            </button>
          </div>
          <div id="client_state_id_display" data-client-inline-edit-target="display" data-field="state_id">
            <p class="font-montserrat text-lg text-negro-onix mt-1">
              <% if client.state.present? %>
                <%= client.state %>
              <% else %>
                <span class="text-gray-400 italic">No especificado</span>
              <% end %>
            </p>
          </div>
          <div data-client-inline-edit-target="editForm" data-field="state_id" class="hidden mt-1">
            <%= render 'field_edit_form', client: client, field: 'state_id' %>
          </div>
        </div>
      </div>
      
      <!-- Estado del Cliente y Fuente -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Estado del Cliente -->
        <div>
          <div class="flex items-center justify-between">
            <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Estado del Cliente</h3>
            <button type="button" 
                    data-action="click->client-inline-edit#toggleEdit"
                    data-field="status"
                    class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
              Editar
            </button>
          </div>
          <div id="client_status_display" data-client-inline-edit-target="display" data-field="status">
            <span class="inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full font-montserrat mt-1
              <% case client.status %>
              <% when 'lead' %>
                bg-blue-100 text-blue-800
              <% when 'no_contesto' %>
                bg-gray-100 text-gray-800
              <% when 'seguimiento' %>
                bg-yellow-100 text-yellow-800
              <% when 'cita_agendada' %>
                bg-purple-100 text-purple-800
              <% when 'reprogramar' %>
                bg-orange-100 text-orange-800
              <% when 'vendido' %>
                bg-green-100 text-green-800
              <% when 'mal_credito' %>
                bg-red-100 text-red-800
              <% when 'no_cerro' %>
                bg-red-100 text-red-800
              <% else %>
                bg-gray-100 text-gray-800
              <% end %>">
              <%= client.status.humanize %>
            </span>
          </div>
          <div data-client-inline-edit-target="editForm" data-field="status" class="hidden mt-1">
            <%= render 'field_edit_form', client: client, field: 'status' %>
          </div>
        </div>
        
        <!-- Fuente -->
        <div>
          <div class="flex items-center justify-between">
            <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Fuente</h3>
            <button type="button" 
                    data-action="click->client-inline-edit#toggleEdit"
                    data-field="source"
                    class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
              Editar
            </button>
          </div>
          <div id="client_source_display" data-client-inline-edit-target="display" data-field="source">
            <span class="inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800 font-montserrat mt-1">
              <%= client.source.humanize.gsub('_', ' ') %>
            </span>
          </div>
          <div data-client-inline-edit-target="editForm" data-field="source" class="hidden mt-1">
            <%= render 'field_edit_form', client: client, field: 'source' %>
          </div>
        </div>

        <!-- Motivo (solo cuando el estado es 'no_cerro') -->
        <% if client.status == 'no_cerro' %>
        <div>
          <div class="flex items-center justify-between">
            <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Motivo</h3>
            <button type="button"
                    data-action="click->client-inline-edit#toggleEdit"
                    data-field="reasons"
                    class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
              Editar
            </button>
          </div>
          <div id="client_reasons_display" data-client-inline-edit-target="display" data-field="reasons">
            <%= render 'field_display', client: client, field: 'reasons' %>
          </div>
          <div data-client-inline-edit-target="editForm" data-field="reasons" class="hidden mt-1">
            <%= render 'field_edit_form', client: client, field: 'reasons' %>
          </div>
        </div>
        <% end %>
      </div>
      <!-- Vendedor que generó prospecto y Vendedor asignado -->
      <div class="pt-4 border-t border-gray-200">
        <% if client.prospecting_seller.present? || client.requires_prospecting_seller? %>
          <div class="mb-3">
            <div class="flex items-center justify-between">
              <h3 class="font-poppins text-sm font-semibold text-gray-500 uppercase">Vendedor que generó prospecto</h3>
              <button type="button" 
                      data-action="click->client-inline-edit#toggleEdit"
                      data-field="prospecting_seller_id"
                      class="text-xs text-rojo-carmesi hover:text-red-700 font-medium">
                Editar
              </button>
            </div>
            <div id="client_prospecting_seller_id_display" data-client-inline-edit-target="display" data-field="prospecting_seller_id">
              <p class="font-montserrat text-lg text-negro-onix mt-1">
                <% if client.prospecting_seller.present? %>
                  <%= client.prospecting_seller.name %>
                <% else %>
                  <span class="text-gray-400 italic">No asignado</span>
                <% end %>
              </p>
            </div>
            <div data-client-inline-edit-target="editForm" data-field="prospecting_seller_id" class="hidden mt-1">
              <%= render 'field_edit_form', client: client, field: 'prospecting_seller_id' %>
            </div>
          </div>
        <% end %>
        
        <!-- Vendedor asignado -->
        <%= render 'assigned_seller_inline', client: client %>
      </div>

      <!-- Contenedor para el formulario de citas -->
      <div class="pt-4 border-t border-gray-200">
        <% active_appointment = client.appointments.find_by(status: 'scheduled') %>

        <div id="appointment-details-section">
          <% if active_appointment %>
            <div class="mb-2">
              <span class="text-xs font-poppins text-gray-600">
                Citas canceladas: <%= client.cancellations_count %>
              </span>
            </div>
            <%= render 'appointments/appointment_details', client: client, appointment: active_appointment %>
          <% else %>
            <div class="pb-4 border-b border-gray-200">
              <button type="button" data-action="click->toggle#toggle" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Agendar Nueva Cita
              </button>
              <div class="mt-2 text-center">
                <span class="text-xs font-poppins text-gray-600">
                  Citas canceladas: <%= client.cancellations_count %>
                </span>
              </div>
            </div>
          <% end %>
        </div>

        <div id="appointment-form-container" data-toggle-target="content" class="hidden">
          <%# Instanciamos un appointment nuevo para el formulario %>
          <%= render 'appointments/form', client: client, appointment: (active_appointment || client.appointments.new(seller_id: client.assigned_seller_id, address: client.address)) %>
        </div>
      </div>

      <!-- Fechas de creación y actualización -->
      <div class="pt-4 border-t border-gray-200">
        <div class="grid grid-cols-1 gap-3 text-sm">
          <div>
            <span class="font-poppins font-semibold text-gray-500">Creado:</span>
            <span class="font-montserrat text-gray-600 ml-2"><%= client.created_at.strftime("%d/%m/%Y a las %H:%M") %></span>
          </div>
          <div>
            <span class="font-poppins font-semibold text-gray-500">Última actualización:</span>
            <span class="font-montserrat text-gray-600 ml-2"><%= client.updated_at.strftime("%d/%m/%Y a las %H:%M") %></span>
          </div>
          <% if client.updated_status_at != nil %>
            <div>
              <span class="font-poppins font-semibold text-gray-500">Última actualización de status:</span>
              <span class="font-montserrat text-gray-600 ml-2"><%= client.updated_status_at.strftime("%d/%m/%Y a las %H:%M") %> / <%= client.updated_by&.name || "Sistema" %></span>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Sección de Notas -->
      <div class="pt-6 border-t border-gray-200" data-controller="notes">
        <h3 class="font-poppins text-lg font-semibold text-negro-onix mb-4">Notas</h3>
        <!-- Formulario para nueva nota -->
        <div id="note-form" class="mb-6">
          <%= form_with model: [client, Note.new], local: false, class: "space-y-3" do |form| %>
            <div>
              <%= form.text_area :text, 
            placeholder: "Agregar una nota...", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm resize-none",
            rows: 3 %>
            </div>
            <div class="flex justify-end">
              <%= form.submit "Agregar Nota", 
            class: "bg-rojo-carmesi text-white font-poppins font-medium py-2 px-4 rounded-md hover:opacity-90 transition-opacity text-sm" %>
            </div>
          <% end %>
        </div>
        <!-- Lista de notas -->
        <div class="space-y-3">
          <!-- Lista de notas recientes (primeras 20) -->
          <div data-notes-target="recentContainer">
            <div id="notes-list" class="flex flex-col gap-2.5">
              <% recent_notes = client.notes.recent.limit(20) %>
              <% recent_notes.each do |note| %>
                <%= render 'notes/note', note: note %>
              <% end %>
            </div>
            <!-- Boton Ver mas (solo si hay mas de 20 notas) -->
            <% total_notes = client.notes.count %>
            <% if total_notes > 20 %>
              <div data-notes-target="loadMoreButton" class="text-center pt-3">
                <%= button_to "Ver todas las notas (#{total_notes})", 
              client_notes_path(client), 
              method: :get,
              form: { 
                data: { 
                  turbo_frame: "all-notes",
                  action: "click->notes#showAllNotes"
                } 
              },
              class: "text-rojo-carmesi font-poppins font-medium text-sm hover:underline" %>
              </div>
            <% end %>
          </div>
          <!-- Frame para cargar todas las notas -->
          <div data-notes-target="allNotesFrame">
            <%= turbo_frame_tag "all-notes", data: { notes_target: "allNotesContent" } %>
          </div>
        </div>
      </div>
      <div class="flex-shrink-0 px-4 py-4 flex justify-end items-center space-x-4 border-t">
        <%= link_to "Editar", edit_client_path(client), class: "font-poppins text-negro-onix hover:text-rojo-carmesi transition-colors" %>
        <button type="button" class="bg-rojo-carmesi text-white font-poppins font-semibold py-2 px-5 rounded-lg hover:opacity-90 transition-opacity">
          Llamar
        </button>
      </div>
    </div>
  </div>