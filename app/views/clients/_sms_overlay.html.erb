<div class="h-full flex flex-col bg-gray-100" style="height: 100vh;">
  <!-- Header del overlay con diseño móvil -->
  <div class="p-4 bg-white border-b border-gray-200 shadow-sm">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <button type="button"
                data-action="click->sms-overlay#hide"
                class="p-2 rounded-full text-gray-600 hover:text-gray-800 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-300 transition-colors">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-4l-4 4z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-poppins font-semibold text-gray-900">
              <%= client.name %>
            </h3>
            <p class="text-sm text-gray-500"><%= client.phone %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Área de mensajes (conversación) -->
  <div class="flex-1 overflow-y-auto p-4 space-y-4" data-sms-overlay-target="messagesContainer">
    <% if text_messages.any? %>
      <% text_messages.each do |sms| %>
        <div class="flex <%= sms.direction == 'inbound' ? 'justify-start' : 'justify-end' %>">
          <div class="max-w-xs lg:max-w-md xl:max-w-lg">
            <!-- Mensaje entrante -->
            <% if sms.direction == 'inbound' %>
              <div class="bg-white rounded-2xl rounded-tl-sm px-4 py-3 shadow-sm border border-gray-200">
                <p class="text-sm text-gray-800 leading-relaxed">
                  <%= sms.message_body %>
                </p>
              </div>
              <div class="mt-1 px-2">
                <span class="text-xs text-gray-500">
                  <%= sms.sms_date.strftime('%d/%m/%Y') %> <%= sms.sms_time.strftime('%H:%M') %>
                </span>
              </div>
            
            <!-- Mensaje saliente -->
            <% else %>
              <div class="bg-blue-500 rounded-2xl rounded-tr-sm px-4 py-3 shadow-sm">
                <p class="text-sm text-white leading-relaxed">
                  <%= sms.message_body %>
                </p>
              </div>
              <div class="mt-1 px-2 flex items-center justify-between">
                <span class="text-xs text-gray-500">
                  <%= sms.sms_date.strftime('%d/%m/%Y') %> <%= sms.sms_time.strftime('%H:%M') %>
                </span>
                <span class="text-xs text-blue-600 font-medium">
                  <%= sms.user&.name || sms.user&.email || 'Tú' %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Estado vacío mejorado -->
      <div class="flex-1 flex items-center justify-center">
        <div class="text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 bg-gray-200 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-4l-4 4z" />
            </svg>
          </div>
          <h3 class="text-lg font-poppins font-semibold text-gray-900 mb-2">Comienza la conversación</h3>
          <p class="text-gray-500 mb-4">Envía un mensaje para iniciar el chat con <%= client.name %></p>
          <button type="button" 
                  class="inline-flex items-center px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-300">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Nuevo mensaje
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Área de entrada de mensajes (estilo móvil) -->
  <div class="p-4 bg-white border-t border-gray-200">
    <form data-action="submit->sms-overlay#sendMessage" data-client-id="<%= client.id %>">
      <div class="flex items-end space-x-3">        
        <!-- Campo de texto -->
        <div class="flex-1 relative">
          <textarea 
            name="message"
            placeholder="Escribe un mensaje..."
            rows="1"
            class="w-full resize-none rounded-2xl border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none px-4 py-3 text-sm placeholder-gray-500 max-h-32"
            data-sms-overlay-target="messageInput"
            data-action="input->sms-overlay#adjustTextareaHeight keydown->sms-overlay#handleKeydown"
          ></textarea>
        </div>
        
        <!-- Botón de enviar -->
        <button type="submit" 
                class="p-3 bg-blue-500 hover:bg-blue-600 text-white rounded-full focus:outline-none focus:ring-2 focus:ring-blue-300 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                data-sms-overlay-target="sendButton"
                title="Enviar mensaje">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Estilos CSS adicionales para el diseño móvil -->
<style>
  /* Animaciones suaves para mensajes */
  .flex > .max-w-xs {
    animation: fadeInUp 0.3s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Scroll suave para el contenedor de mensajes */
  [data-sms-overlay-target="messagesContainer"] {
    scroll-behavior: smooth;
  }
  
  /* Estilo personalizado para el scrollbar */
  [data-sms-overlay-target="messagesContainer"]::-webkit-scrollbar {
    width: 6px;
  }
  
  [data-sms-overlay-target="messagesContainer"]::-webkit-scrollbar-track {
    background: transparent;
  }
  
  [data-sms-overlay-target="messagesContainer"]::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 3px;
  }
  
  [data-sms-overlay-target="messagesContainer"]::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
  
  /* Transiciones suaves para el campo de texto */
  textarea {
    transition: all 0.2s ease-out;
  }
  
  /* Responsive: pantallas pequeñas */
  @media (max-width: 640px) {
    .max-w-xs {
      max-width: 70vw;
    }
  }
</style>