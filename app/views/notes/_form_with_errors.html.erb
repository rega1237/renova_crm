<%= form_with model: [client, note], local: false, class: "space-y-3" do |form| %>
  <div>
    <%= form.text_area :text, 
        placeholder: "Agregar una nota...", 
        class: "w-full px-3 py-2 border #{'border-red-500' if note.errors[:text].any?} #{'border-gray-300' unless note.errors[:text].any?} rounded-md focus:outline-none focus:ring-2 focus:ring-rojo-carmesi focus:border-rojo-carmesi font-montserrat text-sm resize-none",
        rows: 3 %>
    <% if note.errors[:text].any? %>
      <p class="text-red-500 text-xs font-montserrat mt-1">
        <%= note.errors[:text].first %>
      </p>
    <% end %>
  </div>
  <div class="flex justify-end">
    <%= form.submit "Agregar Nota", 
        class: "bg-rojo-carmesi text-white font-poppins font-medium py-2 px-4 rounded-md hover:opacity-90 transition-opacity text-sm" %>
  </div>
<% end %>