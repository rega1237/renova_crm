<%= turbo_frame_tag "all-notes" do %>
  <div class="space-y-3">
    <div class="flex justify-between items-center py-2 border-b border-gray-200">
      <h4 class="font-poppins font-medium text-negro-onix">
        Todas las notas (<%= @notes.count %>)
      </h4>
      <button data-action="click->notes#hideAllNotes"
              class="text-gray-500 hover:text-gray-700 text-sm font-montserrat">
        Ocultar
      </button>
    </div>
    
    <div class="space-y-3 max-h-96 overflow-y-auto">
      <% @notes.each do |note| %>
        <%= render 'notes/note', note: note %>
      <% end %>
    </div>
  </div>
<% end %>