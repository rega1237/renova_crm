<div id="note_<%= note.id %>" class="bg-gray-50 rounded-lg p-3 border border-gray-200">
  <div class="flex justify-between items-start mb-2">
    <div class="flex-grow">
      <span class="font-poppins text-sm font-medium text-negro-onix">
        <%= note.created_by&.name || 'Usuario' %>
      </span>
      <span class="font-montserrat text-xs text-gray-500 ml-2">
        <%= time_ago_in_words(note.created_at) %> atrás
      </span>
    </div>
    <div class="flex-shrink-0 ml-2 hidden">
      <%= button_to client_note_path(note.client, note), 
          method: :delete, 
          data: { 
            confirm: '¿Estás seguro de eliminar esta nota?',
            turbo_method: :delete 
          },
          class: "text-gray-400 hover:text-red-500 transition-colors",
          form: { class: "inline" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
  
  <div class="font-montserrat text-sm text-gray-700 leading-relaxed">
    <%= simple_format(note.text, class: "mb-0") %>
  </div>
</div>