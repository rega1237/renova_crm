<div class="flex items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-lg">
    
    <div>
      <%= image_tag "renova_rojo_carmesi.svg", alt: "Renova Logo", class: "mx-auto h-20 w-auto" %>
      <h2 class="mt-6 text-center text-3xl font-poppins font-bold text-negro-onix">
        Iniciar Sesión
      </h2>
    </div>

    <% if alert = flash[:alert] %>
      <p class="py-3 px-4 bg-red-50 text-red-700 font-montserrat font-medium rounded-lg text-center" id="alert"><%= alert %></p>
    <% end %>
    <% if notice = flash[:notice] %>
      <p class="py-3 px-4 bg-green-50 text-green-700 font-montserrat font-medium rounded-lg text-center" id="notice"><%= notice %></p>
    <% end %>

    <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm -space-y-px">
        
        <div>
          <%= form.label :email, "Correo Electrónico", class: "block font-poppins text-sm font-medium text-negro-onix mb-1" %>
          <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "ejemplo@dominio.com", value: params[:email_address], class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm px-4 py-2 focus:outline-none focus:border-rojo-carmesi focus:ring focus:ring-rojo-carmesi focus:ring-opacity-50 font-montserrat" %> 
        </div>

        <div class="pt-4">
          <%= form.label :password, "Contraseña", class: "block font-poppins text-sm font-medium text-negro-onix mb-1" %>
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "••••••••", maxlength: 72, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm px-4 py-2 focus:outline-none focus:border-rojo-carmesi focus:ring focus:ring-rojo-carmesi focus:ring-opacity-50 font-montserrat" %>
        </div>
      </div>

      <div>
        <%= form.submit "Ingresar", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-poppins font-semibold rounded-md text-white bg-rojo-carmesi hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rojo-carmesi cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>