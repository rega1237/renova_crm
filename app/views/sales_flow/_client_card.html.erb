<%= link_to client_path(client), 
    data: { 
      turbo_frame: "slideover",
      client_id: client.id,
      client_status: client.status,
      assigned_seller_id: client.assigned_seller_id,
      updated_at: (client.status == 'lead' ? client.created_at : (client.updated_status_at || client.updated_at)).iso8601
    }, 
    class: "block client-card bg-white border border-gray-200 rounded-lg p-3 relative group hover:shadow-lg transition-shadow" do %>
  <!-- Drag handle único (solo visible en hover) -->
  <div class="drag-handle absolute top-2 right-2 text-gray-400 group-hover:text-gray-600 z-10"
       data-action="click->sales-flow#preventLinkClick">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
    </svg>
  </div>
  <!-- Avatar del cliente -->
  <div class="flex items-start space-x-3 mb-3">
    <div class="flex-shrink-0 w-10 h-10 bg-rojo-carmesi rounded-full flex items-center justify-center">
      <span class="text-sm font-poppins font-bold text-white">
        <%= client.name.first.upcase %>
      </span>
    </div>
    <div class="flex-grow min-w-0">
      <p class="font-poppins font-medium text-negro-onix text-sm truncate">
        <%= client.name %>
      </p>
      <p class="font-montserrat text-xs text-gray-500 truncate">
        <%= client.phone %>
      </p>
    </div>
  </div>
  <!-- Información adicional -->
  <div class="space-y-2">
    <!-- Estado y fuente -->
    <div class="flex items-center justify-between">
      <span class="inline-flex px-2 py-1 text-xs leading-4 font-semibold rounded-full bg-indigo-100 text-indigo-800 font-montserrat">
        <%= client.source.humanize.gsub('_', ' ') %>
      </span>
      <% if client.state.present? %>
        <span class="inline-flex px-2 py-1 text-xs leading-4 font-semibold rounded-full bg-gray-100 text-gray-600 font-montserrat">
          <%= client.state.abbreviation %>
        </span>
      <% end %>
    </div>
    <!-- Vendedores (mostrar el relevante según el contexto) -->
    <% if client.assigned_seller.present? %>
      <!-- Vendedor asignado (más importante para el flujo de ventas) -->
      <div class="flex items-center">
        <svg class="w-3 h-3 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="font-montserrat text-xs text-green-700 truncate">
          Asignado: <%= client.assigned_seller.name %>
        </span>
      </div>
    <% elsif client.requires_assigned_seller? %>
      <!-- Indicador de que necesita vendedor asignado -->
      <div class="flex items-center">
        <svg class="w-3 h-3 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <span class="font-montserrat text-xs text-yellow-600">
          Necesita vendedor
        </span>
      </div>
    <% elsif client.prospecting_seller.present? %>
      <!-- Vendedor que generó el prospecto -->
      <div class="flex items-center">
        <svg class="w-3 h-3 text-blue-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="font-montserrat text-xs text-blue-600 truncate">
          Prospecto: <%= client.prospecting_seller.name %>
        </span>
      </div>
    <% end %>
    <!-- Última nota -->
    <% if client.notes.any? %>
      <div class="bg-gray-50 rounded p-2">
        <div class="flex items-center justify-between mb-1">
          <span class="font-montserrat text-xs text-gray-500">Última nota:</span>
          <span class="font-montserrat text-xs text-gray-400">
            <%= time_ago_in_words(client.notes.recent.first.created_at) %> atrás
          </span>
        </div>
        <p class="font-montserrat text-xs text-gray-700 line-clamp-2">
          <%= truncate(client.notes.recent.first.text, length: 60) %>
        </p>
      </div>
    <% end %>
    <!-- Fecha de creación -->
    <div class="flex items-center justify-between pt-2 border-t border-gray-100">
      <span class="font-montserrat text-xs text-gray-400">
        Creado: <%= client.created_at.strftime("%d/%m") %>
      </span>
      <!-- Indicador de notas -->
      <div class="flex items-center">
        <svg class="w-3 h-3 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="font-montserrat text-xs text-gray-500">
          <%= client.notes.count %>
        </span>
      </div>
    </div>
  </div>
<% end %>
<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>